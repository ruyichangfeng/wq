page{
  background: #fff;
  width: 100%;
  box-sizing: border-box;
  padding: 3%;
}
.biaoti{
  width: 100%;
  line-height: 50rpx;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif, "微软雅黑";
  color: #242424;
  font-size: 35rpx;
  font-weight: bold;
}
.box{
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  padding: 3% 0;
}
.box-left,.box-right{
  float: left;
}
.box-left{
  padding-right: 6%;
  height: 60rpx;
}
.box-right{
  height: 40rpx;
  line-height: 40rpx;
  border-left: 1px solid #D2D2D2;
  padding-left: 5%;
  position: relative;
  top: 10rpx;
}
.box-left image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 50%;
  margin-right: 5%;
}
.box-left text{
  display: inline-block;
  position: relative;
  top: -70rpx;
  left: 72rpx;
}
.box-left text,.box-right{
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif, "微软雅黑";
  color: #929292;
  font-size: 28rpx;
}
.xiangqing{
  width: 100%;
  font-family: "Helvetica Neue", Helvetica, Arial, sans-serif, "微软雅黑";
  color: #6D6D6D;
  font-size: 30rpx;
  line-height: 50rpx;
  padding: 10rpx;
  box-sizing: border-box;
}/* my_page/zsjjxq/zsjjxq.wxss *//* mu_ying/index/headlinexq/headlinexq.wxss */
.xiangqing view{
  width: 100%;
  box-sizing: border-box;
}
.xiangqing view.wxParse image{
  width: 100%;
  display: block;
}
.xiangqing view.wxParse-span view{
  text-indent: 65rpx;
} 

/* 底部导航 */
.nav{
  width: 100%;
  height: 95rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;left: 0;
}
.nav button{
  display: inline-block;
  width: 33.33%;
  height: 95rpx;
  line-height: 67rpx;
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 0;
}
.nav button image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}
.nav button:nth-child(1){
  background: #C9355B;
}
.nav button:nth-child(2){
  background: #E49015;
}
.nav button:nth-child(3){
  background: #59325B;
}
.nav button text{
  font-family: "微软雅黑";
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  position: relative;
  top: -11rpx;
}
/* 隐藏导航 */
.hn{
  width: 500rpx;
  height: 520rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  bottom: 110rpx;
  right: 20rpx;
}
.hn-fenlei{
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  padding-bottom: 30rpx;
}
.hn-fenlei-list{
  float: left;
  width: 33.33%;
  text-align: center;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.hn-fenlei-list image{
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
}
.hn-fenlei-list view{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: "微软雅黑";
  color: #fff;
  font-size: 28rpx;
}
view.show{
  display: block;
}
view.hide{
  display: none;
}