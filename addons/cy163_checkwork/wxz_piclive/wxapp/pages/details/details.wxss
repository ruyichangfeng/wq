.details-box{
  padding: 20px 10%;
  background-color: #fff;
}

.img-top{
  text-align: center;
}

.img-top image{
  border-radius: 10px;
  width: 100%;
}

.img-explain{
  font-size: 32rpx;
  margin-top: 10px;
}

.img-icon-box{
  color: #999;
  margin-top: 10px;
  font-size: 26rpx;
}

.img-icon-box i{
  font-size: 26rpx;
}

.synopsis{
  margin-top: 10px;
  padding: 20px 10%;
  background-color: #fff;
}

.pop-details-font-box{
  color: #999;
  font-size: 26rpx;
}

.pop-details-font-title{
  font-size: 30rpx;
  line-height: 60rpx;
}

.pop-details-font-subheading{
  font-size: 28rpx;
  line-height: 50rpx;
  margin: 6px 0;
}

.pop-details-font{
  line-height: 50rpx;
}

.pop-details-icon{
  font-size: 23rpx;
  line-height: 40rpx;
}

.pop-details-icon i{
  font-size: 23rpx;
  line-height: 40rpx;
}

.font-line{
  border-bottom: 1px solid #eee;
  height: 10px;
  width: 100%;
  margin-bottom: 10px;
}

.btn{
  position: fixed;
  bottom: 10px;
  width: 100%;
  text-align: center;
}

.btn button{
  background-color: #ef473a;
  font-size: 28rpx;
  text-align: center;
  border: none;
  color: #fff;
  width: 50%;
  padding: 2px;
  box-shadow: 2px 0px 3px #ffc0b6;
}

.btn-hover{
  background-color: #ee7066;
}