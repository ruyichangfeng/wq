page{
  background: #eee;
  padding-bottom: 13%;
}
.riji{
  width: 100%;
  padding: 20rpx;
  background: #fff;
  box-sizing: border-box;
  margin-bottom: 20rpx;
  overflow: hidden;
}
.riji-left{
  float: left;
  width: 450rpx;
  padding-right: 20rpx;
  box-sizing: border-box;
}
.riji-title{
  width: 100%;
  font-family: "微软雅黑";
  font-size: 30rpx;
  color: #000;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}
.tiji-time{
  width: 100%;
  font-family: "微软雅黑";
  font-size: 26rpx;
  color: #A4A4A4;
}
.riji-xq{
  width: 100%;
  height: 114rpx;
  font-family: "微软雅黑";
  font-size: 28rpx;
  color: #A4A4A4;
  overflow: hidden;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  margin: 5rpx 0 5rpx 0;
}
.riji-right{
  float: right;
  width: 260rpx;
  height: 200rpx;
}
.riji-right image{
  width: 100%;
  height: 100%;
}
/* 底部导航 */
.nav{
  width: 100%;
  height: 95rpx;
  box-sizing: border-box;
  position: fixed;
  bottom: 0;left: 0;
}
.nav button{
  display: inline-block;
  width: 33.33%;
  height: 95rpx;
  line-height: 67rpx;
  text-align: center;
  padding: 20rpx;
  box-sizing: border-box;
  border-radius: 0;
}
.nav button image{
  width: 45rpx;
  height: 45rpx;
  margin-right: 10rpx;
}
.nav button:nth-child(1){
  background: #C9355B;
}
.nav button:nth-child(2){
  background: #E49015;
}
.nav button:nth-child(3){
  background: #59325B;
}
.nav button text{
  font-family: "微软雅黑";
  font-size: 30rpx;
  color: #fff;
  font-weight: bold;
  position: relative;
  top: -11rpx;
}
/* 隐藏导航 */
.hn{
  width: 500rpx;
  height: 520rpx;
  border-radius: 20rpx;
  box-sizing: border-box;
  background: rgba(0, 0, 0, 0.6);
  position: fixed;
  bottom: 110rpx;
  right: 20rpx;
}
.hn-fenlei{
  width: 100%;
  box-sizing: border-box;
  overflow: hidden;
  padding-bottom: 30rpx;
}
.hn-fenlei-list{
  float: left;
  width: 33.33%;
  text-align: center;
  box-sizing: border-box;
  margin-top: 30rpx;
}
.hn-fenlei-list image{
  width: 85rpx;
  height: 85rpx;
  border-radius: 50%;
}
.hn-fenlei-list view{
  width: 100%;
  height: 40rpx;
  line-height: 40rpx;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
  font-family: "微软雅黑";
  color: #fff;
  font-size: 28rpx;
}
view.show{
  display: block;
}
view.hide{
  display: none;
}

.aaa{
  width: 100%;
  padding: 10rpx 0; 
  text-align: center;
  font-family: "微软雅黑";
  font-size: 28rpx;
  color: #A4A4A4;
}